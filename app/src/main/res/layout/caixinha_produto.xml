<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        tools:context=".CaixinhaProdutoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFotoProduto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/imagem_produto01_tela_produtos"
                app:layout_constraintEnd_toEndOf="@+id/viewPagamento2"
                app:layout_constraintStart_toStartOf="@+id/viewPagamento2"
                app:layout_constraintTop_toTopOf="@+id/viewPagamento2"
                app:srcCompat="@drawable/kits4" />

            <TextView
                android:id="@+id/txtNome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center|center_horizontal"
                android:text="@string/Descrição_img01_tela_produtos"
                android:textColor="@color/cinzaText"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/viewPagamento2"
                app:layout_constraintStart_toStartOf="@+id/viewPagamento2"
                app:layout_constraintTop_toBottomOf="@+id/imgFotoProduto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelCifrao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ "
                    android:textColor="@color/cinzaText"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/viewPagamento2"
                    app:layout_constraintStart_toStartOf="@+id/viewPagamento2"
                    app:layout_constraintTop_toBottomOf="@+id/txtNome1" />

                <TextView
                    android:id="@+id/txtPreco1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150,00"
                    android:textColor="@color/cinzaText"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/viewPagamento2"
                    app:layout_constraintStart_toStartOf="@+id/viewPagamento2"
                    app:layout_constraintTop_toBottomOf="@+id/txtNome1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>